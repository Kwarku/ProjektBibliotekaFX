<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.HBox?>
<HBox spacing="10.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pl.biblioteka.projekt.controllers.TopMenuButtonsController">
    <ToggleButton contentDisplay="TOP" mnemonicParsing="false" onAction="#openList" prefHeight="80.0" prefWidth="150.0"
                  text="%list.books">
        <toggleGroup>
            <ToggleGroup fx:id="toggleButtons"/>
        </toggleGroup>
        <graphic>
            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../icons/book-list.png"/>
            </ImageView>
        </graphic>
    </ToggleButton>
    <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#addBook" prefHeight="80.0" prefWidth="150.0"
            text="%add.book">
        <graphic>
            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" smooth="false">
                <Image url="@../icons/book.png"/>
            </ImageView>
        </graphic>
    </Button>
    <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#addCategory" prefHeight="80.0" prefWidth="150.0"
            text="%add.category">
        <graphic>
            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../icons/category.png"/>
            </ImageView>
        </graphic>
    </Button>
    <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#addAuthor" prefHeight="80.0" prefWidth="150.0"
            text="%add.author">
        <graphic>
            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../icons/add-author.png"/>
            </ImageView>
        </graphic>
    </Button>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</HBox>
