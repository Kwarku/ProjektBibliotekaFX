<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.biblioteka.projekt.controllers.MainController">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <MenuBar>
                <menus>
                    <Menu mnemonicParsing="false" text="%file.menu">
                        <items>
                            <MenuItem mnemonicParsing="false" onAction="#closeApplication" text="%close.item" />
                        </items>
                    </Menu>
                    <Menu mnemonicParsing="false" text="%edit.menu">
                        <items>
                            <RadioMenuItem mnemonicParsing="false" onAction="#setModena" selected="true" text="%modena.item">
                                <toggleGroup>
                                    <ToggleGroup fx:id="styleGroup" />
                                </toggleGroup>
                            </RadioMenuItem>
                            <RadioMenuItem mnemonicParsing="false" onAction="#setCaspian" text="%caspian.item" toggleGroup="$styleGroup" />
                            <SeparatorMenuItem mnemonicParsing="false" />
                            <CheckMenuItem mnemonicParsing="false" onAction="#setAlwaysOnTop" text="%on.top.item" />
                        </items>
                    </Menu>
                    <Menu mnemonicParsing="false" text="%help.menu">
                        <items>
                            <MenuItem mnemonicParsing="false" onAction="#about" text="%about.item" />
                        </items>
                    </Menu>
                </menus>
            </MenuBar>
            <!--dodanie calego pliku fxml z kontrolkami dobra praktyka tak robic -->
            <fx:include fx:id="topMenuButtons" source="TopMenuButtons.fxml" />
         <padding>
            <Insets bottom="10.0" />
         </padding>
        </VBox>
    </top>
</BorderPane>
