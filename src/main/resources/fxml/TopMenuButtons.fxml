<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.HBox?>
<HBox spacing="10.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pl.biblioteka.projekt.controllers.TopMenuButtonsController">
    <children>
        <ToggleButton mnemonicParsing="false" onAction="#openLibe" prefHeight="80.0" prefWidth="150.0" text="%library">
            <toggleGroup>
                <ToggleGroup fx:id="toggleButtons"/>
            </toggleGroup>
        </ToggleButton>
        <ToggleButton mnemonicParsing="false" onAction="#openList" prefHeight="80.0" prefWidth="150.0"
                      text="%list.books" toggleGroup="$toggleButtons"/>
        <ToggleButton mnemonicParsing="false" onAction="#openStat" prefHeight="80.0" prefWidth="150.0" text="%stats"
                      toggleGroup="$toggleButtons"/>
        <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#addBook" prefHeight="80.0" prefWidth="150.0"
                text="%add_book">
            <graphic>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" smooth="false">
                    <image>
                        <Image url="@../icons/open-book.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#addCategory" prefHeight="80.0" prefWidth="150.0"
                text="%add.category">
            <graphic>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../icons/category.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#addAuthor" prefHeight="80.0" prefWidth="150.0"
                text="%add.author">
            <graphic>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../icons/pen.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</HBox>
