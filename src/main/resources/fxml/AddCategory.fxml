<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.biblioteka.projekt.controllers.CategoryController">
    <children>
        <HBox alignment="TOP_CENTER" spacing="20.0">
            <children>
                <Label text="%add.category">
                    <HBox.margin>
                        <Insets left="25.0" />
                    </HBox.margin>
                </Label>
                <TextField fx:id="addCategoryTextField" />
                <Button fx:id="addCategoryButton" mnemonicParsing="false" onAction="#addCategoryOnAction" text="%add.button" />
                <Label text="%chose.category" />
                <ComboBox fx:id="addCategoryComboBox" onAction="#comboBoxOnAction" prefWidth="150.0" />
            <Button fx:id="editCategoryButton" mnemonicParsing="false" onAction="#editCategoryOnAction" text="%edit.button" />
            <Button fx:id="delCategoryButton" mnemonicParsing="false" onAction="#deleteCategoryOnAction" text="%del.button" />
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
      <TreeView fx:id="categoryTreeView" prefWidth="200.0" showRoot="false" />
    </children>
</VBox>
